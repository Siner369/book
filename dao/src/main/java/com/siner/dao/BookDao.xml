<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.siner.dao.BookDao">
    <resultMap id="BookMap" type="com.siner.entity.Book">
        <id property="bid" column="bid"/>
        <result property="bname" column="bname"/>
        <result property="booktype" column="booktype"/>
        <result property="bpic" column="bpic"/>
        <result property="mid" column="mid"/>
        <result property="bprice" column="bprice"/>
        <result property="bnum" column="bnum"/>


        <association property="comments" javaType="com.siner.entity.Comments">
            <id property="cid" column="cid"/>
            <result property="uid" column="uid"/>
            <result property="bid" column="bid"/>
            <result property="oid" column="oid"/>
            <result property="cscore" column="cscore"/>
        </association>
    </resultMap>

    <!--<insert id="register" parameterType="com.hntest.entity.Logininfo">
        insert into Logininfo values(#{lid},#{username},#{password},#{state},
        #{usertype},#{admin})
	</insert>-->

    <select id="findAllBook" resultMap="BookMap" parameterType="java.lang.String">
        select * from book b left join comments c on b.bid = c.bid;
    </select>

    <select id="searchBookByName" resultMap="BookMap" parameterType="java.lang.String">
        select * from book b left join comments c on b.bid = c.bid where b.bname like  concat('%',#{bookname},'%');
    </select>

    <insert id="addBook" parameterType="com.siner.entity.Book">
        insert into book values(#{bname},#{booktype},#{bpic},#{mid},
        #{bprice},#{bnum})
	</insert>
</mapper>
