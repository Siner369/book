        on l.lid = a.account_id
    </select>-->

    <!--<insert id="register" parameterType="com.hntest.entity.Logininfo">
        insert into Logininfo values(#{lid},#{username},#{password},#{state},
        #{usertype},#{admin})
	</insert>-->

    <select id="getCounts" resultType="int" parameterType="com.siner.entity.Book">
        select count(1) from book b left outer join comments c on b.bcomid = c.cid
    </select>

    <select id="getListByPage" resultMap="BookMap" parameterType="java.util.Map">
        select *from(
        select r.bankinfo_id,r.tradeCode,r.tradeTime,r.amount,r.note,p.bankname,
        p.accountname,p.accountNumber,p.bankforname,p.iconCls,rownum rn  from Rechargeoffline r
        left outer join Platformbankinfo p on r.bankinfo_id = p.platformbankinfo_id
        and rownum <![CDATA[ <= ]]> #{pageEnd} order by r.bankinfo_id)
        where rn <![CDATA[ >= ]]> #{pageStart}
    </select>

</mapper>
